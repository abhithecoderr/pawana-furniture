<!-- Custom Order -->
<section class="custom-order">
  <div class="section-container">
    <div class="custom-order-content">
      <h2>Ready to Start Your Custom Order?</h2>
      <p>Tell us what you have in mind, and we'll help bring your vision to life.</p>
      <form class="custom-order-form" action="/contact/submit" method="POST">
        <div class="form-group">
          <input type="text" name="name" placeholder="Your Name" required>
        </div>
        <div class="form-group">
          <input type="tel" name="phone" placeholder="Contact Number" required>
        </div>
        <div class="form-group">
          <textarea name="message" placeholder="Briefly describe your enquiry..." rows="1" required></textarea>
        </div>
        <button type="submit" class="btn-submit">Request Callback</button>
      </form>
    </div>
  </div>
</section>
